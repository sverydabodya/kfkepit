{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "types/*"]
		},
		"typeRoots": ["./node_modules/@types", "types"]
	},
	"ts-node": {
		"files": true
	},
	"include": [
		"./src/**/*",
		"types",
		"types/**/*.d.ts",
		"types/*.d.ts",
		"src/**/*.ts"
	]
}
